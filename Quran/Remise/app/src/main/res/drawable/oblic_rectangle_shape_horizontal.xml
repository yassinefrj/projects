<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Couleur de remplissage -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Couleur et épaisseur de la bordure -->
            <corners android:radius="4dp" /> <!-- Rayon des coins -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" /> <!-- Espacement intérieur -->
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape>
                <size
                    android:width="200dp"
                    android:height="100dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
